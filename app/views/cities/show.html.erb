<div class="container">
  <h2><%= @city.name %></h2>
  
  <h3>Potins de cette ville :</h3>
  <ul class="list-group mt-3">
    <% @gossips.each do |gossip| %>
      <li class="list-group-item">
        <%= link_to gossip.title, the_gossip_project_path(gossip), class: "text-info" %>
      </li>
    <% end %>
  </ul>

  <div class="mt-3">
    <%= link_to "Retour aux villes", cities_path, class: "btn btn-secondary" %>
  </div>
</div>
