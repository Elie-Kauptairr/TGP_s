<div class="container d-flex justify-content-center mt-5">
  <div class="col-md-8">
    <h1 class="text-center mb-4">Créer un nouveau Gossip</h1>

    <%= form_with(model: @the_gossip_project, local: true) do |form| %>
      <% if @the_gossip_project.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@the_gossip_project.errors.count, "error") %> a empêché la sauvegarde :</h2>
          <ul>
            <% @the_gossip_project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :content %>
        <%= form.text_area :content, class: "form-control" %>
      </div>

      <div class="text-center mt-4">
        <%= form.submit "Create Gossip", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Back to Gossips", the_gossip_projects_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
